- content_for :pagetitle do 
  User
  = user.full_name.titleize
.row-fluid
  .mws-panel.grid_2.pull-right
    - if user.photo?
      = image_tag user.photo.large_thumb, :width => '500', :alt => user.name, :class => 'img-polaroid'
    - else
      = image_tag 'myicons/user-icon.png', :width => '500', :class => 'img-polaroid'
  .mws-panel.grid_6
    .mws-panel-header
      = link_to 'Edit', edit_users_user_path(user), :class => 'btn btn-info pull-right'
      %span
        User -
        = user.full_name.titleize
    .mws-panel-body.no-padding
      %ul.mws-summary.clearfix
        %li
          %span.key
            = t(:email)
          %span.val
            %span.text-nowrap= mail_to user.email
        %li
          %span.key
            = t(:name)
          %span.val
            %span.text-nowrap= user.full_name
        %li
          %span.key
            = t(:owner)
          %span.val
            %span.text-nowrap
              -if user.is_owner
                .badge.badge-success Owner
              -else
                .badge.badge-important User
        %li
          %span.key
            = t(:phone)
          %span.val
            %span.text-nowrap= user.phone
        %li
          %span.key
            = t(:active)
          %span.val
            %span.text-nowrap= user.active


.clear
%a{:name => "notes"}
.mws-panel.grid_12
  .mws-panel-header
    %span Notes
  .mws-panel-body
    - Comment.where(:commenter_type => 'user').where(:commenter_id => user.id).order('id DESC').each do |c|
      .clear
        .grid_1
          - if c.user.photo_url
            = image_tag c.user.photo.thumb, :alt => c.user.full_name, :width => 50
          - else
            = image_tag '/assets/example/profile.jpg', :alt => c.user.full_name, :width => 50
          %br
          = c.user.name.titleize
        .grid_5
          = c.note
          = c.id
        .grid_2.pull-left
          = c.created_at.in_time_zone('Eastern Time (US & Canada)').strftime('%D %r')
    .clear



.clear
.row-fluid
.mws-panel.grid_12
  .mws-panel-header
    %span Add Notes
  .mws-panel-body
    = form_for comment, :url => comments_path(:commenter_type => "user", :commenter_id => user.id) do |f|
      .mws-form-row
        %label.mws-form-label
          Note
        .mws-form-item
          = f.text_area :note
        %br
        = f.button :submit, :class => 'btn btn-info'
        %br
        %br
