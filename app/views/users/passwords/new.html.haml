#mws-login-wrapper
  #mws-login
    %h1 Forgot password?
    .mws-login-lock
      = image_tag 'myicons/lock-icon.png'
    #mws-login-form
      = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
        = f.error_notification
        .form-inputs
          = f.input :email, input_html: { class: 'mws-login-username requiredi login_field'} , :placeholder => "Email", :label => false
        .form-inputs{:style => 'padding-bottom:10px;text-align:center;'}= link_to "Sign in", new_session_path(resource_name) 
        .clear
        .form-actions
          = f.button :submit, "Reset password",:class => 'btn btn-success btn-block btn-large'
      = #render "devise/shared/links"

