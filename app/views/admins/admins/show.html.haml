- content_for :pagetitle do 
  Admin
  = admin.full_name.titleize
.row-fluid
  .mws-panel.grid_2.pull-right
    - if admin.photo?
      = image_tag admin.photo.large_thumb, :width => '500', :alt => admin.name, :class => 'img-polaroid'
    - else
      = image_tag 'myicons/user-icon.png', :width => '500', :class => 'img-polaroid'
  .mws-panel.grid_6
    .mws-panel-header
      = link_to 'Edit', edit_admins_admin_path(admin), :class => 'btn btn-info pull-right'
      %span
        Admin -
        = admin.full_name.titleize
    .mws-panel-body.no-padding
      %ul.mws-summary.clearfix
        %li
          %span.key
            = t(:email)
          %span.val
            %span.text-nowrap= mail_to admin.email.downcase
        %li
          %span.key
            = t(:name)
          %span.val
            %span.text-nowrap= admin.full_name.titleize
        %li
          %span.key
            = t(:phone)
          %span.val
            %span.text-nowrap= admin.phone
        %li
          %span.key
            = t(:active)
          %span.val
            %span.text-nowrap= admin.active
        %li
          %span.key
            = t(:sign_in_count)
          %span.val
            %span.text-nowrap= admin.sign_in_count
        %li
          %span.key
            = t(:current_sign_in_at)
          %span.val
            %span.text-nowrap= admin.current_sign_in_at
        %li
          %span.key
            = t(:last_sign_in_at)
          %span.val
            %span.text-nowrap= admin.last_sign_in_at
        %li
          %span.key
            = t(:current_sign_in_ip)
          %span.val
            %span.text-nowrap= admin.current_sign_in_ip
        %li
          %span.key
            = t(:last_sign_in_ip)
          %span.val
            %span.text-nowrap= admin.last_sign_in_ip
        %li
          %span.key
            = t(:failed_attempts)
          %span.val
            %span.text-nowrap= admin.failed_attempts
        %li
          %span.key
            = t(:created_at)
          %span.val
            %span.text-nowrap= admin.created_at
        %li
          %span.key
            = t(:updated_at)
          %span.val
            %span.text-nowrap= admin.updated_at
