%html{:lang => "en"}
  / <![endif]
  %head
    %meta{:charset => "utf-8"}/
    / Viewport Metatag
    %meta{:content => "width=device-width,initial-scale=1.0", :name => "viewport"}/
    / Required Stylesheets
    = stylesheet_link_tag 'user_login', :media => "all"
    %title Go Trucker Go - Login Page
  %body
    .container
      - unless flash[:notice].blank?
        #notice
          %h3= flash[:notice]
        %br
      - unless flash[:error].blank?
        #error
          %h3= flash[:error]
        %br
      - unless flash[:alert].blank?
        #alert
          %h3= flash[:alert]
        %br
    = yield
    / JavaScript Plugins
    %script{:src => "js/libs/jquery-1.8.3.min.js"}
    %script{:src => "js/libs/jquery.placeholder.min.js"}
    %script{:src => "custom-plugins/fileinput.js"}
    / jQuery-UI Dependent Scripts
    %script{:src => "jui/js/jquery-ui-effects.min.js"}
    / Plugin Scripts
    %script{:src => "plugins/validate/jquery.validate-min.js"}
    / Login Script
    %script{:src => "js/core/login.js"}
